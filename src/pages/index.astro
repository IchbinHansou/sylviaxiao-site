    <!-- 语言切换 + 像素动画交互 -->
    <script type="module">
      // 简单选择器
      const $ = (s) => document.querySelector(s);

      const btn = document.getElementById('langBtn');
      let en = true;

      // 像素动画交互
      const pixelAnimation = document.getElementById('pixelAnimation');
      const animationHint = document.getElementById('animationHint');
      let isAnimating = false;

      // 浇水动画函数
      function startWateringAnimation() {
        if (isAnimating) return;
        
        isAnimating = true;
        pixelAnimation.classList.add('watering');
        
        // 更新提示文字
        if (en) {
          animationHint.textContent = 'Watering... 💧';
        } else {
          animationHint.textContent = '浇水中... 💧';
        }
        
        // 动画结束后重置
        setTimeout(() => {
          pixelAnimation.classList.remove('watering');
          isAnimating = false;
          
          // 恢复提示文字
          if (en) {
            animationHint.textContent = 'Click to water! 🌱';
          } else {
            animationHint.textContent = '点击浇水！🌱';
          }
        }, 1500);
      }

      function setEN() {
        document.documentElement.lang = 'en';
        $('#title').textContent = 'Sylvia Xiao';
        $('#subtitle').textContent = 'Xiao Zihan · Sylvia / Seluna';
        $('#hello').textContent = 'Hi, I'm Sylvia 🌲';
        $('#lead').textContent =
          'I study how minds shape language — and how machines learn it. Interests include creative computing and the intersections between music, language, and culture.';
        $('#pubs').textContent = 'Publications';
        $('#pubsNote').textContent = 'Papers, posters, talks (coming soon)';
        $('#projs').textContent = 'Projects';
        $('#projsNote').textContent = 'Research projects and collaborations';
        $('#cv').textContent = 'CV';
        $('#cvNote').textContent = 'Download PDF';
        btn.textContent = '中文';
        animationHint.textContent = 'Click to water! 🌱';
      }

      function setZH() {
        document.documentElement.lang = 'zh';
        $('#title').textContent = '肖子涵 Sylvia Xiao';
        $('#subtitle').textContent = '语言与心智 · 创意计算 · 音乐与语言';
        $('#hello').textContent = '你好，我是肖子涵 🌲';
        $('#lead').textContent =
          '我研究心智如何塑造语言，以及机器如何学习语言；关注创意计算与音乐、语言、文化的交叉。';
        $('#pubs').textContent = '学术发表';
        $('#pubsNote').textContent = '论文、海报、报告（敬请期待）';
        $('#projs').textContent = '项目';
        $('#projsNote').textContent = '研究项目与合作';
        $('#cv').textContent = '简历';
        $('#cvNote').textContent = '下载 PDF';
        btn.textContent = 'EN';
        animationHint.textContent = '点击浇水！🌱';
      }

      // 初始英文
      setEN();

      // 语言切换
      btn?.addEventListener('click', () => {
        en = !en;
        if (en) setEN(); else setZH();
      });

      // 像素动画点击事件
      pixelAnimation?.addEventListener('click', startWateringAnimation);
      
      // 键盘支持（空格键触发浇水）
      document.addEventListener('keydown', (e) => {
        if (e.code === 'Space' && document.activeElement === pixelAnimation) {
          e.preventDefault();
          startWateringAnimation();
        }
      });
      
      // 让像素动画区域可以获得焦点
      pixelAnimation?.setAttribute('tabindex', '0');
      pixelAnimation?.setAttribute('role', 'button');
      pixelAnimation?.setAttribute('aria-label', 'Click to water the tree');
    </script>
