---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Research | Sylvia Xiao</title>
    
    <!-- 字体 -->
    <link href="https://fonts.googleapis.com/css2?family=EB+Garamond:wght@500;600;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    
    <!-- 页面背景样式 -->
    <link rel="stylesheet" href="/src/styles/page-backgrounds.css">
    
    <style>
      /* 基础样式 */
      :root{
        --fg:#1e2228; --muted:#5c6575; --line:#00000018;
        --link:#3b82f6; --max:980px; --pad:22px;
      }
      @media (prefers-color-scheme: dark){
        :root{
          --fg:#e8e9ed; --muted:#a7abb7; --line:#ffffff22;
          --link:#60a5fa;
        }
      }
      
      *{ box-sizing:border-box }
      body{ margin:0; color:var(--fg); font:16px/1.7 Inter, system-ui, sans-serif; }
      
      /* 导航样式 */
      .navWrap{ position:sticky; top:0; z-index:40; backdrop-filter:saturate(120%) blur(6px);
        border-top:1px solid var(--line); border-bottom:1px solid var(--line);
        background:color-mix(in oklab,#ffffff 80%, transparent); }
      nav{ max-width:var(--max); margin:0 auto; padding:10px var(--pad); display:flex; flex-wrap:wrap; gap:16px }
      nav a{ color:var(--muted); text-decoration:none; display:inline-flex; gap:.45rem; align-items:center; position:relative }
      nav a:hover{ color:var(--fg) }
      
      /* Research页面特定的导航下划线 */
      nav a[href="/research"]::after{ 
        content:""; position:absolute; left:0; right:0; bottom:-3px; height:2px;
        background:linear-gradient(90deg,#3b82f6,#1d4ed8); transform:scaleX(1); transform-origin:left; transition:.25s; 
      }
      nav a[href="/"]::after{ 
        content:""; position:absolute; left:0; right:0; bottom:-3px; height:2px;
        background:linear-gradient(90deg,#3b82f6,#1d4ed8); transform:scaleX(0); transform-origin:left; transition:.25s; 
      }
      nav a[href="/tech"]::after{ 
        content:""; position:absolute; left:0; right:0; bottom:-3px; height:2px;
        background:linear-gradient(90deg,#9333ea,#7c3aed); transform:scaleX(0); transform-origin:left; transition:.25s; 
      }
      nav a[href="/essays"]::after{ 
        content:""; position:absolute; left:0; right:0; bottom:-3px; height:2px;
        background:linear-gradient(90deg,#f59e0b,#d97706); transform:scaleX(0); transform-origin:left; transition:.25s; 
      }
      nav a[href="/music"]::after{ 
        content:""; position:absolute; left:0; right:0; bottom:-3px; height:2px;
        background:linear-gradient(90deg,#ec4899,#db2777); transform:scaleX(0); transform-origin:left; transition:.25s; 
      }
      nav a[href="/polyglot"]::after{ 
        content:""; position:absolute; left:0; right:0; bottom:-3px; height:2px;
        background:linear-gradient(90deg,#22c55e,#16a34a); transform:scaleX(0); transform-origin:left; transition:.25s; 
      }
      nav a[href="/reading"]::after{ 
        content:""; position:absolute; left:0; right:0; bottom:-3px; height:2px;
        background:linear-gradient(90deg,#f59e0b,#d97706); transform:scaleX(0); transform-origin:left; transition:.25s; 
      }
      nav a[href="/archive"]::after{ 
        content:""; position:absolute; left:0; right:0; bottom:-3px; height:2px;
        background:linear-gradient(90deg,#6b7280,#4b5563); transform:scaleX(0); transform-origin:left; transition:.25s; 
      }
      
      .icon{ width:16px; height:16px; opacity:.9; }
      
      /* 页面标题 */
      .page-title{ font-family:"EB Garamond",serif; font-size:48px; margin:2rem 0 1rem; text-align:center; }
      .page-subtitle{ font-size:20px; color:var(--muted); text-align:center; margin-bottom:3rem; }
      
      /* 内容区域 */
      .content-section{ margin:2rem 0; padding:2rem; background:color-mix(in oklab,#ffffff 70%, transparent); border-radius:12px; border:1px solid var(--line); }
      .content-section h2{ font-family:"EB Garamond",serif; font-size:28px; margin:0 0 1rem; color:#3b82f6; }
      .content-section h3{ font-size:20px; margin:1.5rem 0 0.5rem; }
      
      /* 学术特色样式 */
      .research-highlight{ background:linear-gradient(135deg,#dbeafe,#bfdbfe); padding:1rem; border-radius:8px; border-left:4px solid #3b82f6; margin:1rem 0; }
      .research-highlight h4{ margin:0 0 0.5rem; color:#1e40af; }
      
      /* 研究标签样式 */
      .research-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin: 1.5rem 0;
      }
      
      .research-tag {
        padding: 0.3rem 0.8rem;
        background: rgba(59, 130, 246, 0.1);
        color: #1e40af;
        border: 1px solid rgba(59, 130, 246, 0.2);
        border-radius: 6px;
        font-size: 14px;
        font-weight: 500;
        transition: all 0.2s ease;
      }
      
      .research-tag:hover {
        background: rgba(59, 130, 246, 0.15);
        transform: translateY(-1px);
        box-shadow: 0 2px 8px rgba(59, 130, 246, 0.2);
      }
      
      /* 深色模式下的研究标签 */
      @media (prefers-color-scheme: dark) {
        .research-tag {
          background: rgba(59, 130, 246, 0.15);
          color: #93c5fd;
          border-color: rgba(59, 130, 246, 0.3);
        }
        
        .research-tag:hover {
          background: rgba(59, 130, 246, 0.2);
          box-shadow: 0 2px 8px rgba(59, 130, 246, 0.3);
        }
      }
      
      /* 响应式 */
      @media (max-width:768px){
        .page-title{ font-size:36px; }
        .content-section{ padding:1rem; }
      }
    </style>
  </head>

  <body class="research-page">
    <!-- SVG icons -->
    <svg width="0" height="0" style="position:absolute"><defs>
      <symbol id="ic-book" viewBox="0 0 24 24"><path fill="currentColor" d="M6 4h9a3 3 0 0 1 3 3v12.5a.5.5 0 0 1-.8.4l-2.2-1.6a2 2 0 0 0-1.2-.4H6A2 2 0 0 1 4 16V6a2 2 0 0 1 2-2Zm0 2v10h8a4 4 0 0 1 2 .6V7a1 1 0 0 0-1-1H6Z"/></symbol>
      <symbol id="ic-code" viewBox="0 0 24 24"><path fill="currentColor" d="M9.4 16.6 5.8 13l3.6-3.6 1.4 1.4L8.6 13l2.2 2.2-1.4 1.4Zm5.2 0-1.4-1.4L15.4 13l-2.2-2.2 1.4-1.4L18.2 13l-3.6 3.6Z"/></symbol>
      <symbol id="ic-feather" viewBox="0 0 24 24"><path fill="currentColor" d="M20.7 4.3a4.5 4.5 0 0 0-6.4 0L4 14.6V20h5.4L20.7 10.7a4.5 4.5 0 0 0 0-6.4ZM8.6 18H6v-2.6l7.7-7.7 2.6 2.6L8.6 18Z"/></symbol>
      <symbol id="ic-note" viewBox="0 0 24 24"><path fill="currentColor" d="M12 3v11.1a3.5 3.5 0 1 1-1.5-2.9V6.1l8-2V13a3.5 3.5 0 1 1-1.5-2.9V3.9L12 5.4V3Z"/></symbol>
      <symbol id="ic-chat" viewBox="0 0 24 24"><path fill="currentColor" d="M4 5h10a3 3 0 0 1 3 3v6a3 3 0 0 1-3 3H8l-4 4V8a3 3 0 0 1 3-3Zm14 1h2a2 2 0 0 1 2 2v8l-3-3h-1V6Z"/></symbol>
      <symbol id="ic-archive" viewBox="0 0 24 24"><path fill="currentColor" d="M3 7h18v12a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V7Zm2 0-1-2h16l-1 2H5Zm4 6h6v2H9v-2Z"/></symbol>
    </defs></svg>

    <!-- 导航栏 -->
    <div class="navWrap">
      <nav>
        <a href="/"><svg class="icon"><use href="#ic-book"/></svg>Home</a>
        <a href="/research"><svg class="icon"><use href="#ic-book"/></svg>Research</a>
        <a href="/tech"><svg class="icon"><use href="#ic-code"/></svg>Tech</a>
        <a href="/essays"><svg class="icon"><use href="#ic-feather"/></svg>Essays</a>
        <a href="/music"><svg class="icon"><use href="#ic-note"/></svg>Music</a>
        <a href="/polyglot"><svg class="icon"><use href="#ic-chat"/></svg>Polyglot</a>
        <a href="/reading"><svg class="icon"><use href="#ic-feather"/></svg>Reading</a>
        <a href="/archive"><svg class="icon"><use href="#ic-archive"/></svg>Archive</a>
      </nav>
    </div>

    <!-- 页面内容 -->
    <div class="page-container">
      <div class="page-content">
        <h1 class="page-title">Research</h1>
        <p class="page-subtitle">Computational Linguistics · Psycholinguistics · NLP</p>
        
        <div class="content-section">
          <h2>Research Interests</h2>
          <p>My research sits at the intersection of computational linguistics and psycholinguistics. I'm interested in how humans produce and comprehend language, and how NLP models approximate (or fail to approximate) these processes.</p>
          
          <div class="research-highlight">
            <h4>Current Focus Areas</h4>
            <ul>
              <li>Structural priming and agreement attraction</li>
              <li>In-context learning in large language models</li>
              <li>Discourse anaphora resolution</li>
              <li>L2 writing complexity analysis</li>
            </ul>
          </div>
          
          <!-- 研究领域标签 -->
          <div class="research-tags">
            <span class="research-tag">Syntax & Semantics</span>
            <span class="research-tag">Language Acquisition</span>
            <span class="research-tag">Machine Learning</span>
            <span class="research-tag">Corpus Linguistics</span>
            <span class="research-tag">Cognitive Science</span>
            <span class="research-tag">Multilingual Processing</span>
            <span class="research-tag">Educational Technology</span>
            <span class="research-tag">Cantonese Studies</span>
          </div>
        </div>
        
        <div class="content-section">
          <h2>Publications</h2>
          <p>Coming soon...</p>
        </div>
        
        <div class="content-section">
          <h2>Talks & Posters</h2>
          <p>Coming soon...</p>
        </div>
      </div>
    </div>
  </body>
</html>